<style>
  background-image: url("paper.gif");
</style>

<div class="container">
    <img src="/assets/img/burgerOff.png" class="card-img-top" alt="burgerOff">
    <div class="row ">
        <div class="col">
            <div class="card mb-3 bg-transparent mx-auto text-center">
                <img src="/assets/img/bunTop.png" class="card-img-top" alt="bunTop">
                <div class="card-body">
                    <span>
                        {{#each burgers}}
                        {{#unless this.devoured }}
                        {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                        {{/each}}
                        </ul>
                </div>
                <img src="/assets/img/bunBottom.png" class="card-img-top" alt="bunBottom">
            </div>
        </div>

        <div class="col-3 text-center mx-auto">
            <div class="card p-3 mt-5 shadow">
                <blockquote class="blockquote mb-0">
                    <form class="create-burger">
                        <div class="form-group">
                            <label for="burger">DON'T LIKE OURS? FINE! BUILD YOU OWN:</label>
                            <input class="form-control" type="text" id="burger" name="name">
                            <button class="btn btn-outline-primary" type="submit">SUBMIT</button>
                        </div>
                    </form>
                </blockquote>
            </div>
        </div>

        <div class="col">
            <div class="card mb-3 bg-transparent mx-auto text-center">
                <hr />
                <img src="/assets/img/devouredBurgers.png" class="card-img-top" alt=".burgergif">
                <div class="card-body">
                    <span>
                        {{#each burgers}}
                        {{#if this.devoured }}
                        {{> burgers/burger-block devoured=false}}
                        {{/if}}
                      {{/each}}
                    </span>
                </div>
                <img src="/assets/img/devouredKid2.jpg" class="card-img-top" alt=".burgergif">
            </div>
        </div>
    </div>
</div>