<div class="container">
    <h1 class="text-center mb-5 mt-5">EAT-DA-BURGER!</h1>
    <div class="row ">


        <div class="col">


            <div class="card mb-3 bg-transparent mx-auto text-center">
                <h4 class="text-center mb-4"><i class="fas fa-utensils"></i>BURGERS:</h4>

                <img src="/assets/img/giphy.gif" class="card-img-top" alt="burgerGif">
                <div class="card-body">
                    <span>
                        {{#each burgers}}
                        {{#unless this.devoured }}
                        {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                        {{/each}}
                        </ul>
                </div>
            </div>
        </div>




        <div class="col-3 text-center mx-auto">
            <div class="card p-3 mt-5 shadow">
                <blockquote class="blockquote mb-0">
                    <form class="create-burger">
                        <div class="form-group">
                            <label for="burger">Make a Burger:</label>
                            <input class="form-control" type="text" id="burger" name="name">
                        </div>
                        <button class="btn btn-danger" type="submit">Submit</button>
                    </form>
                </blockquote>
            </div>
        </div>


        <div class="col">

            <div class="card mb-3 bg-transparent mx-auto text-center">
                <hr />
                <h1>DEVOURED</h1>
               <!-- <img src="/assets/img/devoured.jpg" class="card-img-top" alt=".burgergif"> -->
                <div class="card-body">
                    <span>
                        {{#each burgers}}
                        {{#if this.devoured }}
                        {{> burgers/burger-block devoured=false}}
                        {{/if}}
                      {{/each}}
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>