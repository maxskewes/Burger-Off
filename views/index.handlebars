<div class="container">
    <h1 class="text-center mb-5 mt-5">BURGER OFF!</h1>
    <div class="row ">
        <div class="col">
            <div class="card mb-3 bg-transparent mx-auto text-center">
                <h2 class="text-center mb-4"><i class="fas fa-utensils"></i>BURGERS HOT N' READY TO EAT:</h2>
                <img src="/assets/img/giphy.gif" class="card-img-top" alt="burgerGif">
                <div class="card-body">
                    <span>
                        {{#each burgers}}
                        {{#unless this.devoured }}
                        {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                        {{/each}}
                        </ul>
                </div>
            </div>
        </div>

        <div class="col-3 text-center mx-auto">
            <div class="card p-3 mt-5 shadow">
                <blockquote class="blockquote mb-0">
                    <form class="create-burger">
                        <div class="form-group">
                            <label for="burger">BUILD YOU OWN BURGER:</label>
                            <input class="form-control" type="text" id="burger" name="name">
                            <button class="btn btn-danger" type="submit">SUBMIT</button>
                        </div>
                    </form>
                </blockquote>
            </div>
        </div>

        <div class="col">
            <div class="card mb-3 bg-transparent mx-auto text-center">
                <hr />
                <h2>BURGERS THAT HAVE BEEN DEVOURED</h2>
                <div class="card-body">
                    <span>
                        {{#each burgers}}
                        {{#if this.devoured }}
                        {{> burgers/burger-block devoured=false}}
                        {{/if}}
                      {{/each}}
                    </span>
                </div>
                <img src="/assets/img/devoured.jpg" class="card-img-top" alt=".burgergif">
            </div>
        </div>
    </div>
</div>